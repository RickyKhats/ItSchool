<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:layout_constraintDimensionRatio="5"
    tools:context=".GameActivity">


    <!--    <include layout="@layout/content_main" />-->


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="556dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Boss of this gym"
        android:textColor="#BCBCBC"
        android:textSize="30sp" />

    <GridLayout
        android:id="@+id/choiseVariant"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="-1dp"
        android:background="@color/black">

        <Button
            android:id="@+id/active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_inset"
            android:scrollbarThumbHorizontal="@drawable/ic_inset"
            android:scrollbarThumbVertical="@drawable/ic_inset"
            android:text=""
            app:backgroundTint="@color/red"
            app:rippleColor="#595151" />

        <Button
            android:id="@+id/passive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/ic_inset"
            android:text=""
            app:backgroundTint="@color/red"
            app:rippleColor="#FF595151" />

        <Button
            android:id="@+id/neutral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/ic_inset"
            android:text=""
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/red"
            app:rippleColor="#FF595151" />
    </GridLayout>


</RelativeLayout>